<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="@dimen/paddingText">

    <Button android:id="@+id/btn_selectDate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/marginTop"
        android:text="Select date"
        android:textColor="@color/textColor"/>

    <TextView
        android:id="@+id/timeText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/textHighlight"
        android:layout_marginTop="@dimen/marginDouble"
        android:textSize="@dimen/textBig"
        android:text="Running time"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hoursLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/marginTop"
            android:textSize="@dimen/text"
            android:text="Hours: "/>

        <TextView
            android:id="@+id/hoursProgress"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/marginTop"
            android:textSize="@dimen/text"
            android:text="0 h"
            android:paddingLeft="@dimen/paddingText"/>

    </LinearLayout>



        <SeekBar
            android:id="@+id/seekbarHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="23"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
                android:id="@+id/minutesLabel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/textColor"
                android:layout_marginTop="@dimen/marginTop"
                android:textSize="@dimen/text"
                android:text="Minutes"/>

        <TextView
            android:id="@+id/minutesProgress"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/marginTop"
            android:textSize="@dimen/text"
            android:text="0 min"
            android:paddingLeft="@dimen/paddingText"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbarMinutes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="59"/>

    <TextView
        android:id="@+id/distanceLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/textHighlight"
        android:layout_marginTop="@dimen/marginDouble"
        android:textSize="@dimen/textBig"
        android:text="Distance"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kmLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/marginTop"
            android:textSize="@dimen/text"
            android:text="Kilometers: "/>

        <TextView
            android:id="@+id/kmProgress"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/marginTop"
            android:textSize="@dimen/text"
            android:text="0 km"
            android:paddingLeft="@dimen/paddingText"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbarKm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/metersLabel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/marginTop"
            android:textSize="@dimen/text"
            android:text="Meters"/>

        <TextView
            android:id="@+id/metersProgress"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/marginTop"
            android:textSize="@dimen/text"
            android:text="0 m"
            android:paddingLeft="@dimen/paddingText"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbarMeters"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="900"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/marginTop">

        <Button android:id="@+id/btn_save"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/marginTop"
            android:text="Save"
            android:textColor="@color/textColor"/>

    </LinearLayout>
</LinearLayout>